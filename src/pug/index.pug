include ./mixins.pug
doctype html
html(lang="ru")
	+head()
	body.page
		.page__body
			include ./partials/header.pug
			main.page__main
				section.section.section--green-grad
					.page__wrapper
						form#constructorForm.form.form--constructor
							.form__body.container
								h6.text-uppercase.font-weight-extra-bold.mb-2 Материал
								.row.mb-3
									.col-7
										label(for="mark").d-block.mb-0 Марка
										select#mark.select2
											option Excellent Top
											option Kromopak-GC2
											option Kromoplex-GC2
											option DELIGHT GLOSS
											option SENATOR C2S Art Board
											option ALASKA PLUS GC2
											option ATELIER GC-1
											option SIMCOTE
											option NINGBO FOLD GC-1
											option BRAVO GC-1
											option ARKTIKA GC-1
											option MAULE RC
											option Avanta prima
											option Zenith (Manila back)
											option TAMBRITE
											option СКБ
											option SVETOCOAT
											option Unicolor-GD3
											option Multicolor Mirabell-GD2
											option Veno Freeze-GD2
											option SERVIBOARD GD-2
											option UMKA COLOR GD-2
											option НЕВА
											option Hansol Paper Co Ltd
											option Ecoprint-GT3
											option Multicolor Belvedere-GT2
											option Topcolor-GT1
											option CONTIBOARD GT-1
									.col-5
